{
  "compilerOptions": {
    /* Basic Options */
    "target": "es5",
    "lib": ["es2017", "es7", "es6", "dom"],
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "jsx": "react",

    /* Strict Type-Checking Options */
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "exclude": [
    "**/*.test.ts"
  ]
}